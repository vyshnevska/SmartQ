.authform
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin', novalidate: '' })  do |f|
    %h2
      %b= I18n.t('general.devise.sign_in')
    .form-group
      - if devise_mapping.registerable?
        = link_to I18n.t('general.devise.sign_up'), new_registration_path(resource_name), class: 'right'
      = f.input :email, required: false, autofocus: true, placeholder: I18n.t('general.devise.placeholders.email'), label: false, input_html: { size: 40, maxlength: 40, type: 'email', class: 'form-control'}
    .form-group
      - if devise_mapping.recoverable?
        = link_to I18n.t('general.devise.forgot_ps'), new_password_path(resource_name), class: 'right'
      = f.input :password, required: false, autocomplete: 'off', placeholder: I18n.t('general.devise.placeholders.password'), label: false, input_html: { size: 40, maxlength: 20, class: 'form-control'}
    .checkbox.clearfix
      %label.rememner-me.pull-left
        = f.input :remember_me, as: :boolean, input_html: { checked: true } if devise_mapping.rememberable?
        = f.button :submit, I18n.t('general.devise.sign_in'), class: 'btn btn-green pull-left'
