!!!
%html{ :lang => 'en'}
  %head
    %meta{ :charset => 'utf-8'}
    %meta{ :content => 'IE=edge', :http => { equiv: 'X-UA-Compatible' } }
    %title= I18n.t('general.app_name')
    %link{:rel => 'shortcut icon', :href => image_path('smartQ.ico')}

    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=3.exp'
    = stylesheet_link_tag    'application', 'full-width-pics', 'user_assessments', 'quizzs', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tag

  %body
    = render :partial => 'layouts/header'
    %content#main-content
      #alert-notifications
        - if flash.any?
          = render :partial => 'layouts/notifications'
      .container-fluid
        = yield

    = render :partial => 'layouts/modal'
    .purple-top
    %footer
      .container
        .row
          .col-lg-12.footer-below.center-align
            %p
              = I18n.t('general.footer.title')
    .purple-btn
