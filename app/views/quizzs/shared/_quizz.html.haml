%tr{ :id => "quizz-line-#{quizz.id}" }
  %th{ :scope => "row" }= "##{quizz.id}"
  %td= quizz.title
  %td= quizz.state
  %td= quizz.questions_count
  %td
    - if quizz.can_edit?
      = link_to I18n.t('views.quizzes.table.actions.edit'), edit_quizz_path(quizz), { :remote => true, :data => { :target => '#modal-default', :toggle => 'modal' } }
      = link_to I18n.t('views.quizzes.table.actions.add_question'), add_question_quizz_path(quizz), { :remote => true, :data => { :target => '#modal-default', :toggle => 'modal' } }
      - if quizz.can_complete?
        = link_to I18n.t('views.quizzes.table.actions.complete'), complete_quizz_path(quizz)
    - else
      = I18n.t('views.quizzes.table.actions.procede')

    / = link_to I18n.t('views.quizzes.table.actions.destroy'), quizz, { :method => :delete, :data => { :confirm => I18n.translate('views.quizzes.form.confirm') } }